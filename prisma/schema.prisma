generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  pedidos  Pedido[]
}

model Pedido {
  id            Int            @id @default(autoincrement())
  data          DateTime       @default(now())
  valorTotal    Float          @default(0)
  status        StatusPedido   @default(AGUARDANDO_PAGAMENTO)
  clienteId     Int
  cliente       Cliente        @relation(fields: [clienteId], references: [id])
  itens         ItemPedido[]
  pagamentos    Pagamento[]
}

model Produto {
  id        Int          @id @default(autoincrement())
  nome      String
  preco     Float
  estoque   Int
  itens     ItemPedido[]
}

model ItemPedido {
  id         Int     @id @default(autoincrement())
  quantidade Int
  valorUnit  Float
  valorTotal Float
  pedidoId   Int
  pedido     Pedido  @relation(fields: [pedidoId], references: [id])
  produtoId  Int
  produto    Produto @relation(fields: [produtoId], references: [id])
}

model Pagamento {
  id        Int     @id @default(autoincrement())
  metodo    String
  valor     Float
  pedidoId  Int
  pedido    Pedido  @relation(fields: [pedidoId], references: [id])
}

enum StatusPedido {
  AGUARDANDO_PAGAMENTO
  FALHA_NO_PAGAMENTO
  PAGO
  CANCELADO
}
